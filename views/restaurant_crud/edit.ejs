<%- layout('./layouts/boilerplate.ejs') %>
<title>Edit Restaurant</title>

    <h1>EDIT RESTAURANT</h1>   
    <div class="form-container">

    
    <form action="/restaurants/<%= foundRestaurant._id %>?_method=PATCH" method="post">

        <!-- name attribute is how the data will be saved in JS object when submitted -->
        <div>
            <label for="name">Restaurant Name</label>
            <input type="text" id="name" name="restaurant[name]" value="<%= foundRestaurant.name %>">
        </div>
      
        <div>
            <label for="country">Restaurant Location</label>
            <input type="text" id="country" name="restaurant[country]" value="<%= foundRestaurant.country %>">
        </div>
     
        <div>
            <label for="dsc">Description</label>
            <input type="text" id="dsc" name="restaurant[dsc]" value="<%= foundRestaurant.dsc %>">
        </div>
        
        <div>
            <label for="rate">Rating</label>
            <input type="number" id="rate" name="restaurant[rate]" value="<%= foundRestaurant.rate %>">
        </div>
        
        <div>
            <label for="img">Provide an Image</label>
            <input type="text" id="img" name="restaurant[img]" value="<%= foundRestaurant.img %>">
        </div>

        <button>Submit</button>
        
        <a href="/restaurants">VIEW ALL RESTAURANTS</a>

    </form>
    </div>

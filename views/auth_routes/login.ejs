<%- layout('./layouts/boilerplate.ejs') %>


<!-- form that renders a login -->
<!-- want to send the data to the route /login as a post request -->
<link rel="stylesheet" href="/css/login.css">
<div id="login-page">
    <div id="login-banner">
        <div id="login-image">
            <p>hiwad</p>

        </div>
        
        <div id="login-form">
            <form action="/login" method="post" class="actual-form">
        
                <div class="join-container">
                    <p>JOIN WITH US</p>
                    <p>Don't have an account? <a href="/register">Create an account</a></p>
                </div>
                
                <div class="username-container">
                    <label for="username">Username </label>
                    <input type="text" id="username" name="username">
                </div>
               
                <div class="password-container">
                    <label for="password">Password: </label>
                    <input type="password" id="password" name="password">
                </div>
                
                <div class="save-password-container">
                    <input type="checkbox" name="save" id="save">
                    <label for="save">Save your password</label>
            
                </div>
            
                <button class="login-button">LOG IN</button>
            
            
            
            </form>
        </div>

    </div>

</div>

